<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greg.scripturereference" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Favorite Scripture Reference"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Scripture"
            android:label="Favorite Scripture Reference" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayScripture"
            android:label="@string/title_activity_display_scripture" >
        </activity>
        <activity
            android:name=".displayScripture"
            android:label="@string/title_activity_display_scripture"
            android:parentActivityName=".Scripture" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.greg.scripturereference.Scripture" />
        </activity>
    </application>

</manifest>
